{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (Docker)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app/backend"
                },
                {
                    "localRoot": "${workspaceFolder}/shared", 
                    "remoteRoot": "/app/shared"
                }
            ]
        },
        {
            "name": "Librosa Service (Docker)",
            "type": "python", 
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/microservices/librosa_service",
                    "remoteRoot": "/app"
                },
                {
                    "localRoot": "${workspaceFolder}/shared",
                    "remoteRoot": "/app/shared"
                },
                {
                    "localRoot": "${workspaceFolder}/microservices/shared",
                    "remoteRoot": "/app/microservices_shared"
                }
            ]
        }
    ]
}
