{
  "service_name": "flucoma-service",
  "description": "Performs various audio analysis operations using the Flucoma CLI.",
  "bin_path": "flucoma-cli/bin",
  "commands": [
    {
      "name": "ampslice",
      "description": "Amplitude-based slicing of audio using Flucoma CLI.",
      "entrypoint_command": "flucoma-cli-ampslice",
      "inputs": {
        "type": "audio",
        "details": {
          "channels": 1
        }
      },
      "outputs": {
        "type": "matrix",
        "details": {
          "columns": 1,
          "description": "Slice times in seconds"
        }
      },
      "parameters": [
        {
          "name": "threshold",
          "type": "float",
          "default": 0.5,
          "min": 0.0,
          "max": 1.0
        }
      ]
    }
  ]
}
